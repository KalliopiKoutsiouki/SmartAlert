<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CivilProtectionActivity">

    <RelativeLayout
        android:id="@+id/RL_Logout"
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/ic_logout" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_below="@id/RL_Logout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"/>

    <!-- Move the Metrics button next to the Refresh button -->

    <ImageButton
        android:id="@+id/btn_refresh_list"
        android:layout_width="38dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="83dp"
        android:background="@null"
        android:contentDescription="@string/refresh_list"
        android:src="@drawable/ic_refresh_icon" />

    <ImageButton
        android:id="@+id/btn_metrics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btn_refresh_list"
        android:layout_marginStart="37dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@id/btn_refresh_list"
        android:background="@null"
        android:contentDescription="@string/metrics"
        android:src="@drawable/ic_metrics_icon" />
</RelativeLayout>
